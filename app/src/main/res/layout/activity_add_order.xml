<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.add_order.AddOrderActivity">

    <EditText
        android:id="@+id/edt"
        android:alpha="0"
        android:layout_margin="@dimen/_10sdp"
        android:padding="@dimen/_10sdp"
        android:hint="Code..."
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.core.widget.NestedScrollView
        android:layout_above="@+id/box_pay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--Toolbar-->
            <RelativeLayout
                android:background="@color/primaryVariant"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp">
                <TextView
                    android:text="سفارش جدید"
                    style="@style/Text.Title"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <!--OrderListProduct-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_50sdp"
                android:orientation="vertical">
                <!--Order List Product-->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_50sdp"
                    app:cardCornerRadius="@dimen/_15sdp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <!--Header-->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp">

                            <TextView
                                style="@style/Text.Title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:padding="0dp"
                                android:text="سفارشات"
                                android:textColor="@color/gray_50"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_marginEnd="@dimen/_2sdp"
                                    android:padding="@dimen/_2sdp"
                                    android:src="@drawable/ic_baseline_storefront_24"
                                    app:tint="@color/blue" />

                                <ImageView
                                    android:id="@+id/ic_qr_code"
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_marginStart="@dimen/_2sdp"
                                    android:padding="@dimen/_2sdp"
                                    android:src="@drawable/ic_baseline_qr_code_scanner_24"
                                    app:tint="@color/blue" />
                            </LinearLayout>
                        </RelativeLayout>
                        <!--Camera Scanner-->
                        <FrameLayout
                            android:id="@+id/box_camera"
                            android:visibility="gone"
                            tools:visibility="visible"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_250sdp">
                            <com.budiyev.android.codescanner.CodeScannerView
                                android:id="@+id/camera_scanner"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:autoFocusButtonColor="@android:color/white"
                                app:autoFocusButtonVisible="true"
                                app:flashButtonColor="@android:color/white"
                                app:flashButtonVisible="true"
                                app:frameAspectRatioHeight="1"
                                app:frameAspectRatioWidth="1"
                                app:frameColor="@android:color/white"
                                app:frameCornersRadius="0dp"
                                app:frameCornersSize="50dp"
                                app:frameSize="0.75"
                                app:frameThickness="2dp"
                                app:maskColor="#77000000" />
                        </FrameLayout>
                        <!--RecyclerView-->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView"
                            app:reverseLayout="true"
                            android:overScrollMode="never"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:itemCount="5"
                            tools:listitem="@layout/item_product_2" />
                        <!--BoxAmount-->
                        <LinearLayout
                            android:id="@+id/box_price"
                            android:visibility="gone"
                            tools:visibility="visible"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#05000000"
                            android:orientation="vertical"
                            android:paddingStart="@dimen/_10sdp"
                            android:paddingEnd="@dimen/_10sdp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tv_all_order"
                                    android:layout_alignParentStart="true"
                                    android:layout_toStartOf="@+id/tv_all_order_amount"
                                    style="@style/Text.Body2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/iran_sans_black"
                                    android:gravity="start"
                                    android:padding="@dimen/_5sdp"
                                    android:text="@string/all_order" />

                                <TextView
                                    android:id="@+id/tv_all_order_amount"
                                    style="@style/Text.Body2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:fontFamily="@font/iran_sans_black"
                                    android:gravity="end"
                                    android:padding="@dimen/_5sdp"
                                    tools:text="1,980,000 تومان" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/Text.Body2"
                                    android:layout_alignParentStart="true"
                                    android:layout_toStartOf="@+id/tv_tax"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/iran_sans_black"
                                    android:gravity="start"
                                    android:padding="@dimen/_5sdp"
                                    android:text="مالیات" />

                                <TextView
                                    android:id="@+id/tv_tax"
                                    style="@style/Text.Body2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:fontFamily="@font/iran_sans_black"
                                    android:gravity="end"
                                    android:padding="@dimen/_5sdp"
                                    android:text="180,000 تومان" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/Text.Body2"
                                    android:layout_alignParentStart="true"
                                    android:layout_toStartOf="@+id/tv_sipping"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/iran_sans_black"
                                    android:gravity="start"
                                    android:padding="@dimen/_5sdp"
                                    android:text="هزینه‌ارسال" />

                                <TextView
                                    android:id="@+id/tv_sipping"
                                    style="@style/Text.Body2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:fontFamily="@font/iran_sans_black"
                                    android:gravity="end"
                                    android:padding="@dimen/_5sdp"
                                    android:text="رایگان!" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/Text.Body2"
                                    android:layout_alignParentStart="true"
                                    android:layout_toStartOf="@+id/tv_discount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/iran_sans_black"
                                    android:gravity="start"
                                    android:padding="@dimen/_5sdp"
                                    android:textColor="@color/green_2"
                                    android:textStyle="bold"
                                    android:text="تخفیف" />

                                <TextView
                                    android:id="@+id/tv_discount"
                                    style="@style/Text.Body2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:fontFamily="@font/iran_sans_black"
                                    android:gravity="end"
                                    android:padding="@dimen/_5sdp"
                                    android:textColor="@color/green_2"
                                    android:text="19,000 تومان" />
                            </RelativeLayout>

                            <View
                                style="@style/Line"
                                android:layout_margin="0dp" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/Text.Body1"
                                    android:layout_alignParentStart="true"
                                    android:layout_toStartOf="@+id/tv_all_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/iran_sans_black"
                                    android:gravity="start"
                                    android:padding="@dimen/_5sdp"
                                    android:text="قابل‌پرداخت" />

                                <TextView
                                    android:id="@+id/tv_all_price"
                                    style="@style/Text.Body1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:fontFamily="@font/iran_sans_black"
                                    android:gravity="end"
                                    android:padding="@dimen/_5sdp"
                                    android:text="2,179,000 تومان" />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/box_pay"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            style="@style/Text.Title"
            android:fontFamily="@font/iran_sans_black"
            android:padding="@dimen/_5sdp"
            android:gravity="end"
            android:text="40 قلم"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"/>
        <TextView
            style="@style/Text.Title"
            android:fontFamily="@font/iran_sans_black"
            android:padding="@dimen/_5sdp"
            android:gravity="end"
            android:text="1,980,000 تومان"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"/>
        <TextView
            android:fontFamily="@font/iran_sans_black"
            android:background="@color/primaryVariant"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="پرداخت"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            style="@style/Text.Body1"
            android:padding="@dimen/_5sdp"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</RelativeLayout>