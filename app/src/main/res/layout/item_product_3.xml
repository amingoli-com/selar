<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/Margin"
    app:cardCornerRadius="@dimen/_7sdp"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:padding="@dimen/_5sdp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:background="@drawable/background_radius_not_padding"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:scaleType="fitCenter"
                android:visibility="gone"
                tools:src="@drawable/ic_gallery"
                tools:visibility="visible" />
        </RelativeLayout>



        <TextView
            android:id="@+id/title"
            style="@style/Text.Body2"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            android:maxLines="3"
            android:minLines="2"
            android:gravity="center"
            tools:text="دستمال کاغذی حوله ای 3 لا 2 رول سافتلن"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/total_price"
            style="@style/Text.Body1"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/price_orange"
            tools:text="319,000 تومان"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:paddingStart="@dimen/_15sdp"
            android:paddingEnd="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/price_sela"
                style="@style/Text.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="#333"
                android:textStyle="bold"
                tools:text="x29,000" />

            <TextView
                android:id="@+id/price_on_product"
                android:layout_alignParentStart="true"
                style="@style/Text.Body2"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/red"
                tools:text="29,000"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <amingoli.com.selar.widget.BasketAdder
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>