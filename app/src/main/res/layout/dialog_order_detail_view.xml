<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_radius_not_padding"
    android:backgroundTint="@color/white"
    android:gravity="center"
    android:padding="@dimen/_7sdp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:scaleType="fitCenter"
        android:visibility="gone"
        tools:visibility="visible"
        tools:src="@drawable/ic_gallery" />

    <TextView
        android:id="@+id/title"
        style="@style/Text.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="3"
        android:minLines="2"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:textAlignment="center"
        android:textStyle="bold"
        tools:text="دستمال کاغذی حوله ای 3 لا 2 رول سافتلن" />

    <amingoli.com.selar.widget.BasketAdder
        android:id="@+id/basketAdder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp" />

    <TextView
        style="@style/Text.Body2"
        android:textColor="@color/black_content"
        android:text="@string/helper_dialog_order_detail_view"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>