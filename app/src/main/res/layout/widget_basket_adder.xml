<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_radius_basket_adder"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/ic_add"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/_5sdp"
        android:src="@drawable/ic_baseline_add_circle_24"
        app:tint="@color/basket_adder_ic_add" />


    <RelativeLayout
        android:layout_toStartOf="@+id/ic_remove"
        android:layout_toEndOf="@+id/ic_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv"
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            tools:text="28 عدد" />

        <EditText
            android:id="@+id/edt"
            android:visibility="gone"
            android:background="@color/transparent"
            android:digits="0123456789."
            android:imeOptions="actionDone|actionGo"
            android:hint="مقدار موردنظر"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            tools:text="28" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/ic_remove"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/_5sdp"
        android:src="@drawable/ic_baseline_remove_circle_24"
        app:tint="@color/basket_adder_ic_remove" />

</RelativeLayout>