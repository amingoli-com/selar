<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layoutDirection="rtl"
    android:orientation="horizontal"
    android:gravity="center|start"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_40sdp">
    <LinearLayout
        android:id="@+id/box_start"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/_1sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:paddingStart="@dimen/_7sdp"
        android:paddingEnd="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/toolbar_back"
            android:visibility="gone"
            tools:visibility="visible"
            android:padding="@dimen/_3sdp"
            android:background="@drawable/btn_back_selector"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            app:tint="@color/white" />

    </LinearLayout>


    <TextView
        android:id="@+id/toolbar_title"
        android:textDirection="rtl"
        android:layout_toEndOf="@id/box_start"
        android:layout_centerVertical="true"
        android:text="عنوان"
        android:textColor="@color/white"
        style="@style/Text.Title"
        android:textSize="@dimen/_15ssp"
        android:paddingStart="@dimen/_7sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:gravity="center|start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/_48sdp"/>

    <LinearLayout
        android:id="@+id/box_icon_end"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:minWidth="@dimen/_5sdp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/toolbar_addOrder"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:visibility="gone"
            tools:visibility="visible"
            android:src="@drawable/ic_baseline_add_shopping_cart_24"
            android:padding="@dimen/_10sdp"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="match_parent"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/toolbar_carList"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:visibility="gone"
            tools:visibility="visible"
            android:src="@drawable/ic_baseline_directions_car_24"
            android:padding="@dimen/_10sdp"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="match_parent"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/toolbar_print"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:visibility="gone"
            tools:visibility="visible"
            android:src="@drawable/ic_baseline_print_24"
            android:padding="@dimen/_10sdp"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="match_parent"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/toolbar_search"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:visibility="gone"
            tools:visibility="visible"
            android:src="@drawable/ic_baseline_search_24"
            android:padding="@dimen/_10sdp"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="match_parent"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/toolbar_menu"
            android:visibility="gone"
            tools:visibility="visible"
            android:background="@drawable/btn_back_selector"
            android:src="@drawable/ic_baseline_more_vert_24"
            android:padding="@dimen/_10sdp"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="match_parent"
            app:tint="@color/white" />

    </LinearLayout>
</RelativeLayout>