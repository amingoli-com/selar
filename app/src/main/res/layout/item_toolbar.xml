<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layoutDirection="rtl"
    android:orientation="horizontal"
    android:gravity="center|start"
    android:layout_width="match_parent"
    tools:background="@color/primaryVariant"
    android:layout_height="@dimen/_35sdp">
    <LinearLayout
        android:id="@+id/box_start"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:paddingStart="@dimen/_7sdp"
        android:paddingEnd="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/btn_back_selector"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            android:visibility="gone"
            app:tint="@color/white"
            tools:visibility="visible" />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/box_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edt_search"
            android:visibility="gone"
            android:imeOptions="actionSearch"
            android:inputType="textPersonName"
            android:focusable="true"
            android:background="@color/transparent"
            android:textColorHint="@color/white_30"
            android:textColor="@color/white"
            android:padding="@dimen/_5sdp"
            android:hint="@string/search"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UnusedAttribute" />

        <TextView
            android:id="@+id/title"
            style="@style/Text.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:minHeight="@dimen/_48sdp"
            android:paddingStart="@dimen/_7sdp"
            android:paddingEnd="@dimen/_10sdp"
            tools:text="@string/title"
            android:textColor="@color/white"
            android:textDirection="rtl"
            android:textSize="@dimen/_12ssp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/box_icon_end"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:minWidth="@dimen/_5sdp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ic_print"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:visibility="gone"
            tools:visibility="visible"
            android:src="@drawable/ic_baseline_print_24"
            android:padding="@dimen/_10sdp"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="match_parent"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/ic_search"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:visibility="gone"
            tools:visibility="visible"
            android:src="@drawable/ic_baseline_search_24"
            android:padding="@dimen/_10sdp"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="match_parent"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/ic_add"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:visibility="gone"
            tools:visibility="visible"
            android:background="@drawable/btn_back_selector"
            android:src="@drawable/ic_baseline_add_circle_24"
            android:padding="@dimen/_10sdp"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="match_parent"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/ic_menu"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:visibility="gone"
            tools:visibility="visible"
            android:background="@drawable/btn_back_selector"
            android:src="@drawable/ic_baseline_more_vert_24"
            android:padding="@dimen/_10sdp"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="match_parent"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/ic_close"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:visibility="gone"
            tools:visibility="visible"
            android:src="@drawable/ic_baseline_close_24"
            android:padding="@dimen/_10sdp"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="match_parent"
            app:tint="@color/white" />

    </LinearLayout>

</RelativeLayout>