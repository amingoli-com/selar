<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:padding="@dimen/_5sdp"
    android:orientation="vertical">


    <TextView
        android:layout_marginTop="@dimen/_5sdp"
        style="@style/Text.Body1"
        android:textStyle="bold"
        android:drawablePadding="@dimen/_5sdp"
        android:textColor="@color/black_box"
        android:drawableTint="@color/black_box"
        android:drawableStart="@drawable/ic_attach_money_black_24dp"
        android:text="پرداخت 120,390,000 تومان به صورت:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_margin="@dimen/_5sdp"
        android:padding="@dimen/_10sdp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_money"
            style="@style/Text.Body1"
            android:textStyle="bold"
            android:textColor="@color/green_2"
            android:drawableTint="@color/green_2"
            android:drawableTop="@drawable/ic_local_sela_black_24dp"
            android:text="پول‌نقد"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_card"
            style="@style/Text.Body1"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:drawableTint="@color/blue"
            android:drawableTop="@drawable/ic_baseline_credit_card_24"
            android:text="کارتخوان"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_multi_pay"
            style="@style/Text.Body1"
            android:textStyle="bold"
            android:textColor="@color/primaryVariant"
            android:drawableTint="@color/primaryVariant"
            android:drawableTop="@drawable/ic_unit_symbols_black_24dp"
            android:text="ترکیبی"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <amingoli.com.selar.widget.loader_button.LoaderButton
        android:id="@+id/submit"
        android:alpha="0"
        tools:alpha="1"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/background_complementary"
        android:backgroundTint="@color/complementary"
        android:clickable="true"
        android:focusable="true"
        app:btnText="@string/submit"
        app:btnTextSize="@dimen/_14ssp"
        app:loaderIndicator="BallPulseIndicator"
        app:loaderIndicatorColor="@color/white" />
</LinearLayout>