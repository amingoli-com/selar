<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:padding="@dimen/_5sdp"
    android:orientation="vertical"
    tools:ignore="UnusedAttribute,UseCompatTextViewDrawableXml">


    <TextView
        android:id="@+id/tv_amount"
        android:layout_marginTop="@dimen/_5sdp"
        style="@style/Text.Body1"
        android:textStyle="bold"
        android:drawablePadding="@dimen/_5sdp"
        android:textColor="@color/black_box"
        android:drawableTint="@color/black_box"
        android:drawableStart="@drawable/ic_baseline_monetization_on_24"
        tools:text="@string/test_pay_000_by"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_margin="@dimen/_5sdp"
        android:padding="@dimen/_10sdp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_money"
            style="@style/Text.Body1"
            android:textStyle="bold"
            android:textColor="@color/green_2"
            android:drawableTint="@color/green_2"
            android:drawableTop="@drawable/ic_local_sela_black_24dp"
            android:text="@string/cash_money_pay"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_card"
            style="@style/Text.Body1"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:drawableTint="@color/blue"
            android:drawableTop="@drawable/ic_baseline_credit_card_24"
            android:text="@string/card_pay"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_multi_pay"
            style="@style/Text.Body1"
            android:textStyle="bold"
            android:textColor="@color/orange"
            android:drawableTint="@color/orange"
            android:drawableTop="@drawable/ic_unit_symbols_black_24dp"
            android:text="@string/multi_pay"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_debit"
            style="@style/Text.Body1"
            android:textStyle="bold"
            android:textColor="@color/primaryVariant"
            android:drawableTint="@color/primaryVariant"
            android:drawableTop="@drawable/ic_baseline_browse_gallery_24"
            android:text="@string/debit"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_submit"
        android:visibility="gone"
        tools:visibility="visible"
        android:alpha="0"
        tools:alpha="1"
        style="@style/Text.Title"
        android:textAlignment="center"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:textColor="@color/white"
        android:background="@drawable/background_radius"
        android:backgroundTint="@color/complementary"
        android:text="@string/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>