<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/_5sdp"
    android:paddingBottom="@dimen/_5sdp"
    android:paddingRight="@dimen/_15sdp"
    android:paddingLeft="@dimen/_15sdp"
    android:backgroundTint="@color/white"
    android:background="@drawable/dialog_menu_background_inset">

    <TextView
        android:layout_marginTop="@dimen/_60sdp"
        style="@style/Text.Body1"
        android:padding="@dimen/_5sdp"
        android:drawablePadding="@dimen/_5sdp"
        android:drawableStart="@drawable/ic_baseline_add_circle_24"
        android:text="افزودن کسب‌وکار جدید"
        android:drawableTint="@color/primaryVariant"
        android:textColor="@color/primaryVariant"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:padding="@dimen/_5sdp"
        android:drawablePadding="@dimen/_5sdp"
        android:drawableStart="@drawable/ic_baseline_create_24"
        style="@style/Text.Body1"
        android:drawableTint="@color/blue"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:text="ویرایش کسب‌وکار"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginBottom="0dp"
        style="@style/Line"/>

    <TextView
        android:layout_marginTop="@dimen/_5sdp"
        android:paddingHorizontal="@dimen/_8sdp"
        style="@style/Text.Body2"
        android:textStyle="bold"
        android:text="لیست کسب‌وکار ثبت شده"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:padding="@dimen/_5sdp"
        android:drawablePadding="@dimen/_5sdp"
        android:drawableStart="@drawable/ic_baseline_storefront_24"
        style="@style/Text.Body1"
        android:text="نانوایی انصار"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:padding="@dimen/_5sdp"
        android:drawablePadding="@dimen/_5sdp"
        android:drawableStart="@drawable/ic_baseline_storefront_24"
        style="@style/Text.Body1"
        android:text="رستوران گل شعبه سه"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>