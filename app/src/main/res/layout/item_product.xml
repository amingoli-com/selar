<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/Margin"
    app:cardCornerRadius="@dimen/_7sdp"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:padding="@dimen/_5sdp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image"
            android:visibility="gone"
            tools:visibility="visible"
            tools:src="@drawable/image_product_test"
            android:scaleType="fitCenter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"/>

        <TextView
            android:id="@+id/title"
            style="@style/Text.Body2"
            android:textStyle="bold"
            android:maxLines="3"
            android:minLines="3"
            android:gravity="center"
            tools:text="دستمال کاغذی حوله ای 3 لا 2 رول سافتلن"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/Text.Body2"
                android:textColor="@color/blue"
                android:maxLines="2"
                android:text="خرید"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/price_sela"
                style="@style/Text.Body2"
                android:textColor="@color/blue"
                android:maxLines="2"
                tools:text="100,000,000 تومان"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/Text.Body2"
                android:textColor="@color/red"
                android:maxLines="2"
                android:text="روی کالا"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/price_on_product"
                style="@style/Text.Body2"
                android:textColor="@color/red"
                android:maxLines="2"
                tools:text="100,000,000 تومان"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/Text.Body2"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:maxLines="2"
                android:text="فروش"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/price_buy"
                style="@style/Text.Body2"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:maxLines="2"
                tools:text="100,000,000 تومان"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/stock"
                style="@style/Text.Body2"
                android:singleLine="true"
                android:textColor="@color/white"
                android:background="@drawable/border"
                android:backgroundTint="@color/blue"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:layout_margin="@dimen/_3sdp"
                android:textStyle="bold"
                android:maxLines="2"
                tools:text="2,900 موجودی"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/chart"
                style="@style/Text.Body2"
                android:singleLine="true"
                android:textColor="@color/white"
                android:background="@drawable/border"
                android:backgroundTint="@color/orange"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:layout_margin="@dimen/_5sdp"
                android:textStyle="bold"
                android:maxLines="2"
                android:text="۸۰ فروش"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:id="@+id/barcode"
            style="@style/Text.Body2"
            android:singleLine="true"
            android:textColor="@color/white"
            android:background="@drawable/border"
            android:backgroundTint="@color/purple"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:layout_margin="@dimen/_5sdp"
            android:textStyle="bold"
            android:maxLines="2"
            android:drawableEnd="@drawable/ic_baseline_qr_code_scanner_24"
            android:drawableTint="@color/white"
            android:drawablePadding="@dimen/_5sdp"
            tools:text="28383040340838"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>