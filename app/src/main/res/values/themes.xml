<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Selar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/my_font</item>
        <item name="fontFamily">@font/my_font</item>
        <item name="font">@font/my_font</item>
        <item name="android:direction">right_to_left</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:windowBackground">@color/background_activity</item>
    </style>

    <style name="spinnerStyleView"  parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">#333333</item>
        <item name="android:fontFamily">@font/iran_sans_mobile</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardView"></style>

    <style name="Margin">
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:layout_marginEnd">@dimen/_5sdp</item>
        <item name="android:layout_marginBottom">@dimen/_5sdp</item>
    </style>

    <style name="Edittext"></style>

    <style name="Edittext.product">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/_10sdp</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">textPersonName</item>
    </style>

    <style name="Edittext.product.Price">
        <item name="android:digits">0123456789</item>
    </style>

    <style name="Edittext.product.Decimal">
        <item name="android:digits">0123456789.</item>
    </style>

    <style name="Line">
        <item name="android:alpha">0.5</item>
        <item name="android:layout_marginStart">@dimen/_3sdp</item>
        <item name="android:layout_marginEnd">@dimen/_3sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/black</item>
        <item name="android:layout_marginBottom">@dimen/_5sdp</item>
    </style>

    <style name="Text">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="Text.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Title">
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="Text.Body1">
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="Text.Body2">
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>
</resources>